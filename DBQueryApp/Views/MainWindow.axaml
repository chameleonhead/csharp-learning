<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    xmlns:vm="clr-namespace:DBQueryApp.ViewModels"
    x:Class="DBQueryApp.Views.MainWindow"
    x:DataType="vm:MainWindowViewModel"
    Title="SQL Query Tool"
    Width="1200" Height="700">

    <DockPanel LastChildFill="True">
        <!-- 左側: テーブルリスト -->
        <Border DockPanel.Dock="Left">
            <TreeView
                ItemsSource="{Binding TableTree}"
                SelectedItem="{Binding SelectedNode, Mode=TwoWay}"
                Width="250"
                Margin="5">
                <TreeView.DataTemplates>
                    <TreeDataTemplate DataType="vm:TreeNode" ItemsSource="{Binding Children}">
                        <TextBlock Text="{Binding Name}" />
                    </TreeDataTemplate>
                </TreeView.DataTemplates>
            </TreeView>
        </Border>

        <!-- 右側: クエリ + 実行 + 結果 -->
        <DockPanel LastChildFill="True">

            <!-- 上部: クエリ入力＋実行ボタン -->
            <Border DockPanel.Dock="Top">
                <StackPanel>
                    <!-- クエリ入力エリア -->
                    <TextBox Name="QueryTextBox"
                        Text="{Binding Query, Mode=TwoWay}"
                        AcceptsReturn="True"
                        FontFamily="Consolas"
                        FontSize="14"
                        TextWrapping="Wrap"
                        Height="120"
                        Margin="5" />

                    <!-- 実行ボタン -->
                    <Button Name="ExecuteButton"
                        Command="{Binding ExecuteCommand}"
                        Content="▶ Execute"
                        Width="120"
                        Background="#0078D7"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="10" />
                </StackPanel>
            </Border>

            <!-- 中央: 結果表示エリア -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- テキスト結果 -->
                <TextBlock Name="ResultTextBlock"
                    Grid.Row="0"
                    Text="{Binding ResultMessage}"
                    Foreground="LightGray"
                    FontFamily="Consolas"
                    FontSize="13"
                    Padding="10"
                    TextWrapping="Wrap" />

                <!-- データグリッド -->
                <DataGrid Name="ResultDataGrid"
                    Grid.Row="1"
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    GridLinesVisibility="All" />
            </Grid>

        </DockPanel>

    </DockPanel>

</Window>