<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="DBQueryApp.MainWindow"
    Title="SQL Query Tool"
    Width="1000" Height="700"
    Background="#1E1E2F">

    <DockPanel LastChildFill="True">

        <!-- 上部: クエリ入力＋実行ボタン -->
        <Border DockPanel.Dock="Top" Background="#2C2C3C">
            <StackPanel>
                <!-- クエリ入力エリア -->
                <TextBox Name="QueryTextBox"
                    AcceptsReturn="True"
                    FontFamily="Consolas"
                    FontSize="14"
                    Background="#1E1E2F"
                    Foreground="White"
                    BorderBrush="#444"
                    TextWrapping="Wrap"
                    Height="120" />

                <!-- 実行ボタン -->
                <Button Name="ExecuteButton"
                    Content="▶ Execute"
                    Width="120"
                    Background="#0078D7"
                    Foreground="White"
                    FontWeight="Bold"
                    Margin="10" />
            </StackPanel>
        </Border>

        <!-- 中央: 結果表示エリア -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- テキスト結果 -->
            <TextBlock Name="ResultTextBlock"
                Grid.Row="0"
                Text="結果メッセージがここに表示されます"
                Foreground="LightGray"
                FontFamily="Consolas"
                FontSize="13"
                TextWrapping="Wrap" />

            <!-- データグリッド -->
            <DataGrid Name="ResultDataGrid"
                Grid.Row="1"
                AutoGenerateColumns="True"
                GridLinesVisibility="All"
                Background="White"
                Foreground="Black"
                BorderBrush="#444" />
        </Grid>

    </DockPanel>

</Window>